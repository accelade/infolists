{
    "name": "accelade/infolist",
    "description": "Infolist package for Laravel - Display read-only information with Filament-compatible API",
    "keywords": ["laravel", "infolist", "filament", "blade", "components"],
    "license": "MIT",
    "type": "library",
    "repositories": [
        {
            "type": "path",
            "url": "../accelade"
        },
        {
            "type": "path",
            "url": "../schemas"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/view": "^11.0|^12.0",
        "accelade/accelade": "*",
        "accelade/schemas": "*",
        "simplesoftwareio/simple-qrcode": "^4.2",
        "picqer/php-barcode-generator": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "laravel/pint": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Accelade\\Infolist\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Accelade\\Infolist\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Accelade\\Infolist\\InfolistServiceProvider"
            ],
            "aliases": {
                "Infolist": "Accelade\\Infolist\\Facades\\Infolist"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "format": "pint",
        "mago": "./mago lint src/ || mago lint src/",
        "mago:fix": "./mago lint src/ --fix || mago lint src/ --fix"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
